<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>job Application</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <center>
      <h2>PATEL DHYEY</h2>
      <h2>24DEV054</h2>
    </center>
    <div
      class="card position-absolute top-50 start-50 translate-middle my-4"
      style="width: 300px; height: 475px; background-color: #76abae"
    >
      <div class="text-center fs-2 my-3"><b> Forgot password </b></div>
      <div class="position-absolute top-50 start-50 translate-middle">
        <div id="msg" style="width: 250px; margin-top: 70px"></div>
        <form id="form" class="mx-3">
          <label for="email">Email* :</label>
          <input
            type="text"
            name="email"
            id="email"
            tabindex="1"
            placeholder="abc@xyz.com"
            minlength="10"
          /><br /><br />
          <label for="password">Password* :</label>
          <input
            type="password"
            name="password"
            id="password"
            tabindex="2"
            length="10"
          /><br /><br />
          <label for="repassword">Repassword* :</label>
          <input
            type="text"
            name="repassword"
            id="repassword"
            tabindex="2"
            length="10"
          /><br /><br />
          <input
            type="button"
            class="btn btn-dark"
            onclick="btn()"
            value="Login"
          />
        </form>
      </div>
    </div>
    <div
      id="link"
      class="position-absolute top-100 start-50 translate-middle"
    ></div>
    <script>
      const btn = async () => {
        let form = new FormData(document.getElementById("form"));
        let formdata = Object.fromEntries(form);
        var passcheck =
          /^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{6,16}$/;
        console.log(Object.fromEntries(form));
        if (
          formdata.password == "" ||
          formdata.password != formdata.repassword
        ) {
          document.getElementById(
            "msg"
          ).innerHTML = `<div class="alert alert-danger text-center m-2">Enter valid Data ....<div>`;
          preventDefault();
        } else {
          if (!formdata["repassword"].match(passcheck)) {
            console.log("hi");
            document.getElementById(
              "msg"
            ).innerHTML = `<div class="alert alert-danger text-center m-2">Enter  Strong password ....<div>`;
          } else {
            document.getElementById("msg").style.display = "none";
            await fetch("http://localhost:8000/user/forgotpassword", {
              headers: {
                "Content-Type": "application/x-www-form-urlencoded",
              },
              method: "post",
              body: JSON.stringify({
                form: formdata,
              }),
            })
              .then(async (e) => {
                document.getElementById("msg").style.display = "block";
                console.log(e);
                if (e.status == 200) {
                  let msg = await e.json();
                  document.getElementById(
                    "msg"
                  ).innerHTML = `<div class="alert alert-success text-center m-2">${msg.msg} ....<div>`;
                  window.location = `http://localhost:8000/user/login`;
                } else if (e.status == 404) {
                  let msg = await e.json();
                  document.getElementById(
                    "msg"
                  ).innerHTML = `<div class="alert alert-success text-center m-2">${msg.msg} ....<div>`;
                }
              })
              .catch((e) => {
                console.log(e);
              });
          }
        }
      };
    </script>
  </body>
</html>
