<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="d-flex justify-content-center m-5">
      <form method="get" action="/normal-search">
        <input
          type="text"
          name="id"
          placeholder="Search ID"
          id="sql"
          index="1"
          required
        />
        <input
          type="submit"
          value="Search"
          class="btn btn-outline-dark btn-sm m-1"
        />
      </form>
      <button class="btn btn-outline-dark btn-sm m-1" onclick="showmore()">
        Show more
      </button>
    </div>
    <div id="show" class="d-none">
      <form method="get" action="/normal-search">
        <input
          type="text"
          name="first_name"
          placeholder="Search first name"
          id="first_name"
          index="4"
        />
        <input
          type="text"
          name="last_name"
          placeholder="Search last name"
          id="last_name"
          index="5"
        />
        <input
          type="text"
          name="city"
          placeholder="Search city"
          id="city"
          index="7"
        />
        <select name="type" id="order">
          <option id="1" value="OR">OR</option>
          <option id="2" value="AND">AND</option>
        </select>
        <input
          type="submit"
          value="Search"
          class="btn btn-outline-dark btn-sm m-1"
        />
      </form>
    </div>
    <%- include('../dynamic-table.ejs'); %> <%- include('../pagination.ejs'); %>
    <script>
      var flag = false;
      const showmore = () => {
        if (flag == false) {
          document
            .getElementById("show")
            .setAttribute("class", "d-flex justify-content-center d-block m-5");
          flag = true;
        } else {
          document.getElementById("show").setAttribute("class", "d-none");
          flag = false;
        }
      };
    </script>
  </body>
</html>
