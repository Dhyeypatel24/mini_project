<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      tr:nth-child(even) {
        background-color: rgba(150, 212, 212, 0.4);
      }
      td:nth-child(even) {
        background-color: rgba(150, 212, 212, 0.4);
      }
      td:hover {
        background-color: rgba(52, 65, 182, 0.4);
      }
    </style>
  </head>
  <body onload="alert('Well Come to our page')">
    <%- include('../nav.ejs'); %>
    <center>
      <h2>PATEL DHYEY</h2>
      <h2>24DEV054</h2>
    </center>
    <h6 style="margin: 25px">
      <center><b> Events Table </b></center>
    </h6>
    <div class="m-5">
      <table class="table table-bordered">
        <tr>
          <td>Click events</td>
          <td onclick="myclick()" id="click">Onclick</td>
          <td ondblclick="mydbclick()" id="dbclick">On Dubble Click</td>
          <td>
            <input
              type="text"
              id="blur"
              onblur="myblur()"
              onfocus="myfocus()"
              placeholder="blur & focus"
            />
          </td>
          <td>
            <input
              type="text"
              id="key"
              onkeydown="mykeydown()"
              onkeyup="mykeyup()"
              placeholder="key down up"
            />
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <p onmousedown="alert('mouse down');">mouse down</p>
          </td>
          <td>
            <p onmouseup="alert('mouse up');">mouse up</p>
          </td>
          <td>
            <p onmousemove="myin()" id="mio1">mouse move</p>
          </td>
          <td><p onmouseout="myout()" id="mio2">mouse out</p></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <h6 onwheel="mywheel()" id="wheel">Mouse wheel</h6>
          </td>
          <td>
            <h6
              ondragstart="dragStart(event)"
              ondrag="mydrag()"
              ondrop="dragover(event)"
              id="drag"
              draggable="true"
            >
              Drag
            </h6>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>Change Fields</td>
          <td>
            Change Event :
            <select name="naem" id="name" onchange="mychange()">
              <option value="dhyey">Dhyey</option>
              <option value="yash">Yash</option>
            </select>
          </td>
          <td>
            <input
              type="text"
              oninput="myinput()"
              id="input"
              placeholder="input"
            />
            <div id="words"></div>
          </td>
          <td>
            <input
              type="text"
              name="invalid"
              id="invalid"
              placeholder="invalid"
              min="5"
              oninvalid="console.log('invalid');"
            />
          </td>
          <td>
            <input
              type="text"
              name="select"
              id="select"
              placeholder="onselect"
              onselect="myselect()"
            />
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <h6 oncopy="alert('copy')">copy</h6>
          </td>
          <td onpaste="alert('past')"><h6>Paste</h6></td>
          <td oncut="alert('cut')"><h6>Cut</h6></td>
          <td>
            <p>
              Error :
              <img src="image.gif" onerror="error()" />
            </p>
          </td>
        </tr>
      </table>
    </div>
    <script>
      function myclick() {
        console.log("clicked...");
        document.getElementById("click").innerHTML = "Clicked....";
      }
      function mydbclick() {
        console.log("dubble clicked...");
        document.getElementById("dbclick").innerHTML = "Dubble Clicked....";
      }
      function myblur() {
        console.log("blured...");
        document.getElementById("blur").style.backgroundColor = "blue";
      }
      function myfocus() {
        console.log("focused...");
        document.getElementById("blur").style.backgroundColor = "white";
      }
      function mychange() {
        let n = document.getElementById("name").value;
        alert(n);
      }
      function myinput() {
        let n = document.getElementById("input").value;
        document.getElementById("words").innerHTML = n;
      }
      function myselect() {
        let n = document.getElementById("select").value;
        alert("selected :  " + n);
      }
      function mykeydown() {
        document.getElementById("key").style.backgroundColor = "blue";
      }
      function mykeyup() {
        document.getElementById("key").style.backgroundColor = "white";
      }
      function myin() {
        document.getElementById("mio1").style.backgroundColor = "blue";
      }
      function myout() {
        document.getElementById("mio2").style.backgroundColor = "red";
      }
      function mywheel() {
        document.getElementById("wheel").style.fontSize = "50px";
      }
      function dragStart(event) {
        event.dataTransfer.setData("Text", event.target.id);
      }
      function mydrag() {
        document.getElementById("drag").innerHTML = "Draging........";
      }
      function dragover(event) {
        document.getElementById("drag").innerHTML = "Drag";
      }
      function error() {
        alert("The image not be loaded.....");
      }
    </script>
  </body>
</html>
